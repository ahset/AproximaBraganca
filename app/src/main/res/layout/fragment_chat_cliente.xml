<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:background="@color/colorMenu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Chat: Bar do Zé"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/logoUsuario"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:src="@drawable/people" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menuLayout">
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/people"/>
                    <TextView
                        android:id="@+id/txtLoginNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maria"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp" />
                </LinearLayout>



                <TextView
                    android:background="@android:color/white"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtLoginSenha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vocês têm Corote?"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/store"/>
                    <TextView
                        android:id="@+id/txtLoginNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bar do Zé"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp" />
                </LinearLayout>



                <TextView
                    android:background="@android:color/white"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtLoginSenha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desculpe, está em falta."
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/people"/>
                    <TextView
                        android:id="@+id/txtLoginNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maria"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:background="@android:color/white"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtLoginSenha"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não esperarei na fila então. Obrigado."
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>