<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <item name="android:textSize">18sp</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:textAppearanceSmall">@style/textViewStyle</item>
        <item name="android:textAppearanceMedium">@style/textViewStyle</item>
        <item name="android:textAppearanceLarge">@style/textViewStyle</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:indeterminateTint">#F3F3F3</item>
    </style>

    <style name="textViewStyleDark" parent="android:Widget.TextView">
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textViewStyleLight" parent="android:Widget.TextView">
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/clarity</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">100</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="buttonStyle" parent="android:Widget.Holo.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MyEditTextstyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@color/colorMenu</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:popupBackground">@color/colorLight</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:background">@drawable/spinners</item>
        <item name="android:singleLine">false</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
    </style>
</resources>